# ═════════════════════════════════════════════════════════════════════════════
# CONFIGURAÇÃO DO BANCO DE DADOS
# ═════════════════════════════════════════════════════════════════════════════
# Formato: DATABASE_URL="driver://user:password@host:port/database"
DATABASE_URL="mysql://root:sua_senha@localhost:3306/senac"

# ═════════════════════════════════════════════════════════════════════════════
# AUTENTICAÇÃO - JWT
# ═════════════════════════════════════════════════════════════════════════════
# Deve ser uma string longa e aleatória (mínimo 32 caracteres)
# Gere uma nova senha: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="sua_chave_jwt_super_secreta_aqui_min_32_chars"

# Tempo de expiração do token (em horas)
JWT_EXPIRES_IN=24

# Tempo de expiração do refresh token (em dias)
JWT_REFRESH_EXPIRES_IN=7

# ═════════════════════════════════════════════════════════════════════════════
# SERVIDOR
# ═════════════════════════════════════════════════════════════════════════════
# Porta do servidor
PORT=3000

# Ambiente (development, staging, production)
NODE_ENV=development

# ═════════════════════════════════════════════════════════════════════════════
# LOGGING
# ═════════════════════════════════════════════════════════════════════════════
# Nível de log (ERROR, WARN, INFO, DEBUG)
# Em produção recomenda-se WARN ou ERROR
LOG_LEVEL=DEBUG

# ═════════════════════════════════════════════════════════════════════════════
# RATE LIMITING
# ═════════════════════════════════════════════════════════════════════════════
# Limite de requisições por IP em 15 minutos
# AUTH: operações de autenticação (login, registro)
# API: requisições gerais da API
# READ: requisições GET
# WRITE: requisições POST, PUT, DELETE

RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_API_MAX=250
RATE_LIMIT_READ_MAX=300
RATE_LIMIT_WRITE_MAX=50

# ═════════════════════════════════════════════════════════════════════════════
# PAGINAÇÃO
# ═════════════════════════════════════════════════════════════════════════════
# Limite padrão de registros por página
PAGINATION_DEFAULT_LIMIT=10

# Limite máximo de registros por página
PAGINATION_MAX_LIMIT=100

# ═════════════════════════════════════════════════════════════════════════════
# CORS
# ═════════════════════════════════════════════════════════════════════════════
# URLs permitidas para requisições CORS (separadas por vírgula)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:5173"

# ═════════════════════════════════════════════════════════════════════════════
# EMAIL (Opcional - para notificações)
# ═════════════════════════════════════════════════════════════════════════════
# Provedor de email: sendgrid, mailgun, smtp
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_de_app
EMAIL_FROM=noreply@senac.com.br

# ═════════════════════════════════════════════════════════════════════════════
# OBSERVAÇÕES IMPORTANTES
# ═════════════════════════════════════════════════════════════════════════════
# 1. NUNCA commit o arquivo .env com valores reais em um repositório público
# 2. Use .env.example como template e crie um .env local
# 3. Adicione .env ao .gitignore
# 4. Gere JWT_SECRET seguro com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 5. Em produção, use variáveis de ambiente do servidor (AWS, Heroku, etc)
